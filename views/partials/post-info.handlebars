<article class="post">
  <div class="title">
  <a href="/post/{{id}}" target="_blank">{{title}}</a>
  <span>by {{user.username}} on {{format_date created_at}}</span>
  </div>
  <div class="post-text">
      <span>{{format_url post_url}}</span>
      <span class= "comment-info">({{comments.length}} {{format_plural "comment" comments.length}})</span>
  </div>
